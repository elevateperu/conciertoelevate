---
import Container from "./Container.astro";
---

<Container>
  <div id="contact" class="relative flex flex-col items-center md:flex-row">
    <div class="row items-center py-5 md:pr-16 md:w-4/12 md:py-10">
      <div class="text-center md:text-left space-y-">
        <h2
          class="text-4xl text-plate font-Vanilla font-medium leading-none sm:text-6xl"
        >
          Contacto
        </h2>
      </div>
    </div>
    <div class="flex items-center py-5 md:w-8/12 md:py-10">
      <p class="text-xl font-normal leading-7 text-center md:text-left">
        Conecta con nostros para cualquier tipo de dudas.
      </p>
    </div>
  </div>

  <div
    class="relative flex flex-col items-center md:flex-row my-6 bg-[#f2f2f2] rounded-[45px]"
  >
    <div class="row items-center py-12 px-4 md:px-20 md:w-8/12 md:py-10">
      <form action="#" class="space-y-8 md:w-full">
        <div>
          <label for="email" class="block mb-2 text-base font-medium text-black"
            >Nombre</label
          >
          <input
            type="email"
            id="email"
            class="shadow-sm bg-white border text-black text-base rounded-lg focus:ring-blues focus:border-blues block w-full p-2.5"
            placeholder="Name"
            required
          />
        </div>
        <div>
          <label
            for="subject"
            class="block mb-2 text-base font-medium text-black">Email</label
          >
          <input
            type="text"
            id="subject"
            class="block p-3 w-full text-base text-black bg-white rounded-lg border shadow-sm focus:ring-blues focus:border-blues"
            placeholder="Email"
            required
          />
        </div>
        <div class="sm:col-span-2">
          <label
            for="message"
            class="block mb-2 text-base font-medium text-black dark:text-gray-400"
            >Mensaje</label
          >
          <textarea
            id="message"
            rows="6"
            class="block p-2.5 w-full text-base text-plate bg-white rounded-lg shadow-sm border focus:ring-blues focus:border-blues"
            placeholder="Message"></textarea>
        </div>
        <button
          type="submit"
          class="w-full py-5 bg-blues rounded-[14px] justify-center gap-2.5 inline-flex"
        >
          <div class="text-center text-white text-xl font-normal leading-7">
            Enviar mensaje
          </div>
        </button>
      </form>
    </div>
    <div
      class="hidden md:grid md:justify-items-center md:items-start md:gap-8 md:w-4/12 md:py-2"
    >
      <img src="/poster.png" alt="c" class="w-1/2" />
      <div class="text-xl font-bold text-plate">
        <a
          href="https://wa.me/+51981257046?text=Hola%20quiero%20m치s%20informaci칩n%20sobre%20el%20concierto"
          target="_blank"
          class="flex gap-1"
          ><img class="w-8" src="/Te.svg" alt="tel" /> <p>+51 981257046</p>
        </a>
      </div>
      <div class="text-xl font-bold text-plate">
        <a
          href="https://wa.me/+51971008323?text=Hola%20quiero%20m치s%20informaci칩n%20sobre%20el%20concierto"
          target="_blank"
          class="flex gap-1"
          ><img class="w-8" src="/Te.svg" alt="tel" /> <p>+51 971008323</p>
        </a>
      </div>
    </div>
  </div>
</Container>
